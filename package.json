{
  "name": "react-signal-context",
  "version": "0.1.0",
  "description": "A performant state management library for React with a Context-like API.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.tsx --format cjs,esm --dts --clean",
    "dev": "npm run build -- --watch",
    "test": "vitest"
  },
  "keywords": [
    "react",
    "state-management",
    "context",
    "performance",
    "signals"
  ],
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "react": ">=19.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.0.0",
    "@types/react": "^19.2.2",
    "jsdom": "^27.0.0",
    "react": "^19.2.0",
    "tsup": "^8.5.0",
    "typescript": "^5.9.3",
    "vitest": "^3.2.4"
  },
  "publishConfig": {
    "access": "public"
  }
}

