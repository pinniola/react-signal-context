{
  "name": "react-signal-context",
  "version": "1.0.0",
  "description": "A performant, drop-in replacement for React's Context API that eliminates unnecessary re-renders.",
  "main": "./dist/index.js",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.tsx --format cjs,esm --dts --clean",
    "test": "vitest"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "react",
    "context",
    "state-management",
    "performance",
    "signals"
  ],
  "author": "Francesco Perniola",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/pinniola/react-signal-context.git"
  },
  "homepage": "https://github.com/pinniola/react-signal-context#readme",
  "bugs": {
    "url": "https://github.com/pinniola/react-signal-context/issues"
  },
  "peerDependencies": {
    "react": ">=19.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.0.0",
    "@types/react": "^19.0.0",
    "jsdom": "^27.0.0",
    "react": "^19.0.0-rc.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vitest": "^3.2.4"
  }
}

